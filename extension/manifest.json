{
    "manifest_version": 3,
    "name": "Flashcard Builder",
    "version": "1.0",
    "description": "Create flashcards by highlighting text with gesture feedback.",
    "permissions": ["activeTab", "storage", "contextMenus", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }